<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--
    Use your custom style by replacing the style url with the line below:
    mapbox://styles/<your-account-name>/<your-style-ID>
    -->
    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:center_latitude="41.89010"
        mapbox:center_longitude="12.49200"
        mapbox:style_url="mapbox://styles/mapbox/outdoors-v9"
        mapbox:zoom="15"/>

</RelativeLayout>