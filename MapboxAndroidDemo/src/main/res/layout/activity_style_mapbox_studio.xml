<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".examples.styles.MapboxStudioStyleActivity">

    <!--
    Use your custom style by replacing the style url with the line below:
    mapbox://styles/<your-account-name>/<your-style-ID>
    -->
    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="41.89010"
        mapbox:mapbox_cameraTargetLng="12.49200"
        mapbox:mapbox_styleUrl="mapbox://styles/mapbox/cj3kbeqzo00022smj7akz3o1e"
        mapbox:mapbox_cameraZoom="15"/>

</RelativeLayout>