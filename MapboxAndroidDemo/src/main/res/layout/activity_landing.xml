<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mapboxWhite"
    tools:context="com.mapbox.mapboxandroiddemo.account.LandingActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">


    <Button
        android:id="@+id/button_skip_for_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:text="@string/skip_for_now_bottom_button"
        android:textAllCaps="false"
        android:textColor="@color/mapboxGray"
        android:textStyle="italic"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintLeft_toLeftOf="parent"
        custom:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/create_account_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorAccent"
        android:padding="24dp"
        android:text="@string/tv_create_account_button"
        android:textAllCaps="false"
        android:textColor="@color/mapboxWhite"
        android:textSize="16sp"
        custom:layout_constraintBottom_toBottomOf="@+id/sign_in_button"
        custom:layout_constraintHorizontal_bias="0.0"
        custom:layout_constraintLeft_toLeftOf="@+id/guideline6"
        custom:layout_constraintRight_toRightOf="parent"
        custom:layout_constraintTop_toTopOf="@+id/sign_in_button"
        custom:layout_constraintVertical_bias="0.0"/>

    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="64dp"
        android:background="@color/mapboxGreen"
        android:padding="24dp"
        android:text="@string/tv_sign_in_to_account_button"
        android:textAllCaps="false"
        android:textColor="@color/mapboxWhite"
        android:textSize="16sp"
        custom:layout_constraintHorizontal_bias="0.0"
        custom:layout_constraintLeft_toLeftOf="parent"
        custom:layout_constraintRight_toLeftOf="@+id/guideline6"
        custom:layout_constraintTop_toBottomOf="@+id/sign_in_instructions"/>


    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        custom:layout_constraintGuide_percent="0.4"/>

    <TextView
        android:id="@+id/sign_in_instructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="64dp"
        android:gravity="center_horizontal"
        android:text="@string/landing_cta_tv_text"
        android:textColor="@color/mapboxGrayDark"
        android:textSize="16sp"
        custom:layout_constraintLeft_toLeftOf="parent"
        custom:layout_constraintRight_toRightOf="parent"
        custom:layout_constraintTop_toTopOf="@+id/guideline"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        custom:layout_constraintGuide_percent="0.5"/>

    <com.cunoraz.gifview.library.GifView
        android:id="@+id/astronaut_gif"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        custom:gif="@mipmap/mapbox_changing_hands_astronaut"
        custom:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        custom:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        custom:layout_constraintBottom_toTopOf="@+id/guideline"/>

</android.support.constraint.ConstraintLayout>
