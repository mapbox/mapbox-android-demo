<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mapbox.mapboxandroiddemo">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|uiMode"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".examples.SimpleMapViewActivity"></activity>

        <activity android:name=".examples.SupportMapFragmentActivity"></activity>

        <activity android:name=".examples.MapboxStudioStyleActivity"></activity>

        <activity android:name=".examples.DrawMarkerActivity"></activity>

        <activity android:name=".examples.DrawCustomMarkerActivity"></activity>

        <activity android:name=".examples.DrawGeojsonLineActivity"></activity>

        <activity android:name=".examples.DrawPolygonActivity"></activity>

        <activity android:name=".examples.SatelliteStyleActivity"></activity>

        <activity android:name=".examples.CustomRasterStyleActivity"></activity>

        <activity android:name=".examples.AnimateMapCameraActivity"></activity>

        <activity android:name=".examples.SimpleOfflineMapActivity"></activity>

        <activity android:name=".examples.OfflineManagerActivity"></activity>

        <activity android:name=".examples.DirectionsActivity"></activity>

        <activity android:name=".examples.GeocodingActivity"></activity>

        <activity android:name=".examples.StaticImageActivity"></activity>

        <activity android:name=".examples.BoundingBoxCameraActivity"></activity>

        <service android:name="com.mapbox.mapboxsdk.telemetry.TelemetryService"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="9724157045ff7d083492c6d9ae03e60e8609d461" />

    </application>
</manifest>
